	            style="@style/text_18_ffffff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="left|center"
	            android:text="2014/07/04 21:09始发； " />
			<TextView
	            android:id="@+id/chezhang"
	            style="@style/text_18_ffffff"
