            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
			<TextView
	            android:id="@+id/dandangju1"
	            style="@style/text_18_ffffff"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="left|center"
	            android:text="济南铁路局 " />
			<TextView
	            android:id="@+id/dandangju2"
	            style="@style/text_18_ffffff"
